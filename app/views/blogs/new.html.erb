<div id="wrapper">
<%= form_with(model: @blog, local: true, url: confirm_blogs_path) do |form| %>
<% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
  <div class="new_post"><%= form.label :今なにしてる？ %></div>
  <%= form.text_field :content %>
</div>
<div class="field">
  <div class="new_post"><%= form.label :画像 %></div>
  <%= form.file_field :image %>
</div>
<br>
<%= form.submit "投稿" %>
<% end %>
<br>
<div class="button"><%= link_to "一覧画面へ", blogs_path %></div>
</div>
